<% if notice %>
  <p><%= notice %></p>
<% end %>

<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= actual_price(item.price) %> |
  <% if !@user.try(:current_cart).try(:checked_out?) %>
    <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
  <% end %>
<% end %>

<% if current_user %>
  <h4>Signed in as <%= current_user.email %></h4>
<% end %>
